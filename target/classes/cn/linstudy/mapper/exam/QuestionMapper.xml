<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.linstudy.mapper.exam.QuestionMapper">
  <resultMap id="BaseResultMap" type="cn.linstudy.domain.exam.Question">
    <!--@Table question-->
    <id column="q_id" property="id" />
    <result column="q_title" property="title" />
    <result column="q_type" property="type" />
    <result column="judge_right" property="judgeRight" />
  </resultMap>
  <sql id="Base_Column_List">
    id, title, `type`, judge_right
  </sql>
  <select id="selectByPrimaryKey" parameterType="java.lang.Long" resultMap="BaseResultMap">
    select 
    <include refid="Base_Column_List" />
    from question
    where id = #{id}
  </select>
  <select id="selectAllQuestionByTypeAndExamId" resultMap="BaseResultMap">
    select q.id q_id ,  q.title q_title , q.type q_type,
				i.id i_id , i.judge_right i_judge_right , i.question_id  i_question_id , i.title i_title
    from question q
    left join question_item i
    on q.id = i.question_id
		left join exam_question e_q
		on e_q.question_id = q.id
    where q.type = #{type} and exam_id = #{examId}
  </select>
  <select id="selectByQuestionId" resultType="cn.linstudy.domain.exam.QuestionItem">
    select * from question_item where question_id = #{questionId}
  </select>
  <select id="selectRightQutstionItemByQuestionId" resultType="cn.linstudy.domain.exam.QuestionItem">
    select * from question_item where question_id =#{questionId} and judge_right = 1
  </select>
  <select id="selectJudgeQuestion" resultType="cn.linstudy.domain.exam.Question">
    		select * from question q
		left join exam_question e_q
		on q.id = e_q.question_id
		left join exam e
		on e.id = e_q.exam_id
		where q.type = #{type} and e_q.exam_id = #{examId}
  </select>
  <insert id="RandomIntertSingle" >
    insert into exam_question values ()
  </insert>
  <select id="RandomSelectSingle" resultType="cn.linstudy.domain.exam.Question">
    SELECT * FROM question where type = #{type} ORDER BY  RAND() LIMIT 1
  </select>

  <delete id="deleteByPrimaryKey" parameterType="java.lang.Long">
    delete from question
    where id = #{id}
  </delete>
  <insert id="insert" keyColumn="id" keyProperty="id" parameterType="cn.linstudy.domain.exam.Question" useGeneratedKeys="true">
    insert into question (title, `type`, judge_right)
    values (#{title}, #{type}, #{judgeRight})
  </insert>
  <insert id="insertRealtive">
        insert into  exam_question(exam_id, question_id, score) values(#{examId},#{id},#{singleScore})
  </insert>
  <insert id="insertSelective" keyColumn="id" keyProperty="id" parameterType="cn.linstudy.domain.exam.Question" useGeneratedKeys="true">
    insert into question
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="title != null">
        title,
      </if>
      <if test="type != null">
        `type`,
      </if>
      <if test="judgeRight != null">
        judge_right,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      <if test="title != null">
        #{title},
      </if>
      <if test="type != null">
        #{type},
      </if>
      <if test="judgeRight != null">
        #{judgeRight},
      </if>
    </trim>
  </insert>
  <update id="updateByPrimaryKeySelective" parameterType="cn.linstudy.domain.exam.Question">
    update question
    <set>
      <if test="title != null">
        title = #{title},
      </if>
      <if test="type != null">
        `type` = #{type},
      </if>
      <if test="judgeRight != null">
        judge_right = #{judgeRight},
      </if>
    </set>
    where id = #{id}
  </update>
  <update id="updateByPrimaryKey" parameterType="cn.linstudy.domain.exam.Question">
    update question
    set title = #{title},
      `type` = #{type},
      judge_right = #{judgeRight}
    where id = #{id}
  </update>
</mapper>